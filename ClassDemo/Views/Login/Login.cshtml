
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<html>
<head>
    <script src="../../scripts/jquery-1.9.1.min.js"></script>
    <link href="../../Content/bootstrap.css" rel="stylesheet" />
    <script src="../../scripts/angular.min.js"></script>
    <link href="../../Content/LoginCss.css" rel="stylesheet" />
    <title></title>
    <meta charset="utf-8" />
</head>
<body>
@using (Html.BeginForm("Login", "Login"))
{
    <div class="container" style="margin-top:2em">
        <div class="row vertical-offset-80">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default" style=";width:310px">
                    <div class="panel-heading" style="background-color:#222;font-size:10px;color:white">
                        <h3 class="panel-title">Please Login</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form">
                            <img class="profile-img"  style="width:280px;height:220px"   src="~/Content/Images/Logo.png" />
                            <br />
                            <br />
                            <fieldset>
                                <div class="form-group">
                                    <table>
                                        <tr >
                                            <td>@Html.TextBox("UserName", null, new { @class = "form-control", @placeholder = "UserName", @style = "width:300px;" })</td>
                                        </tr>
                                        <tr style="color:red;">
                                            <td>@Html.ViewBag.Login</td>
                                        </tr>
                                        <tr >
                                            <td>@Html.TextBox("Password", null, new { @class = "form-control", @placeholder = "Password", @style = "width:300px;",@type="password" })</td>
                                        </tr>
                                        <tr style="color:red;">
                                            <td>@Html.ViewBag.Password</td>
                                        </tr>
                                    </table>
                                    </div>
                                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    </body>
</html>
