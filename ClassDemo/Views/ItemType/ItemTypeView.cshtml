@model IEnumerable<ERP.Project.Data.Models.ItemType>
@using ERP.Project.Data.Models;

@{
    ViewBag.Title = "ItemTypeView";
}

<h2>Item Type</h2>

<div>
    @using (Html.BeginForm("ItemTypeView", "ItemType"))
    {
        <table>
            <tr>
                <td>Item Type Name &nbsp;</td>
                <td>@Html.TextBox("ItemName", null, new { @class = "form-control" })</td>
                <td>@Html.DropDownList("ColorCode", (IEnumerable<SelectListItem>)ViewBag.ColorCode, "--Color Code-- ", new { @class = "form-control" })</td>
                <td><input class="btn btn-success" type="submit" value="Add" /></td>
            </tr>
        </table>
       
    }
</div>
<br />
<div style="width:400px;">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Item Type Name </th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ItemTypeId)</td>
                    <td style="background-color:@Html.DisplayFor(modelItem => item.ColorCode)">@Html.DisplayFor(modelItem => item.ItemName)</td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ItemTypeId }) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.ItemTypeId })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>